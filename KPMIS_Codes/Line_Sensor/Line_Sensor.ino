/*
 * Методическое пособие: Работа с аналоговыми датчиками линии на Arduino
 * Данный код демонстрирует чтение данных с двух аналоговых датчиков линии
 */

// Пины для датчиков линии
const int sensorPin1 = A1;  // Пин для первого датчика линии (аналоговый вход A)
const int sensorPin2 = A2;  // Пин для второго датчика линии (аналоговый вход A2)

// Функция setup() выполняется один раз при запуске Arduino
void setup() {
  Serial.begin(9600);  // Инициализация последовательного порта на скорости 9600 бод
  // Примечание: для аналоговых входов (A0-A5) pinMode() не требуется,
  // они по умолчанию настроены как входы
}

// Функция loop() выполняется бесконечно после setup()
void loop() {
  // Чтение аналоговых значений с датчиков
  int sensorValue1 = analogRead(sensorPin1);  // Чтение значения с первого датчика (0-1023)
  int sensorValue2 = analogRead(sensorPin2);  // Чтение значения со второго датчика (0-1023)

  // Вывод значений в последовательный порт для мониторинга
  Serial.print("Датчик 1: ");
  Serial.print(sensorValue1);    // Вывод значения первого датчика
  Serial.print(" | Датчик 2: ");
  Serial.println(sensorValue2);  // Вывод значения второго датчика

  delay(200); // Задержка 200 мс для стабильных показаний и удобства чтения
}
